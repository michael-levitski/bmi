doctype html
head
  link(rel='stylesheet' href='./bmi.css')
  link(href='https://fonts.googleapis.com/css?family=Noto+Sans' rel='stylesheet')
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title BMI checker
.header
  .wrapper
    form(action='/' method='POST')
      h1 BMI calculator
      p Insert Your Age
      input#age(type='text' name='age' value=age)
      p Insert Weight in Kg
      input#weight(type='text' name='weight' value=weight)
      br
      p Insert Height in cm
      input#height(type='text' name='height' value=height)
      br
      button#calc check
      if !result
        p#result
      else if result == 'NaN' || !height || !weight
        p#result Please enter valid weight and height
      else
        p#result #{result} Kg/m&#178;
        